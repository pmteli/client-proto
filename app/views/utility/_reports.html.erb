    <div class="view-controls widget noBorder">
      <!-- widget-body -->
      <div class="widget-body noBorder clearfix">

        <div class="row">
          <div class="col-md-9">
              <span>Select Report:</span>
              <select class="ajax-selector selectpicker col-md-6" id="report-selector" data-url="/utility/view_report">
                <option value="recommendations_by_segments" param_1="recommendations_by_segments">Recommendations By Segments</option>
