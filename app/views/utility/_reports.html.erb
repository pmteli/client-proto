                <option value="actions_by_primary_activity" param_1="actions_by_primary_activity">Actions By Primary Activity</option>
              </select>
          </div>
          <div class="col-md-3">
            <!-- Print Controls -->
            <a class="fa fa-print btn btn-default pull-right" href="#"></a>
            <a class="fa fa-download btn btn-default pull-right" href="#"></a>
            <!-- // Print Controls -->
          </div>
        </div>
     </div>
      <!-- // widget-body -->

    </div><!-- ///////////////////// View Controls Container ///////////////////////////// -->
<% end %>

