            <p><a href="#" class="btn btn-inverse">Take Action</a></p>
          </div>
        </div>
      </div>
    </div>
    <!-- // Item END -->
    <!-- Item -->
    <div class="item">
      <div class="row">
        <div class="col-xs-7">
          <%= image_tag("charts/operational-01.jpg", :alt => "[Image: Graph]") %>
        </div>
        <div class="col-xs-5 relativeWrap">
          <div class="carousel-caption">
            <h2>Save $6,860 on Start-Up and Shut-Down</h2>
