
<script type="text/javascript">

    var chart;

    function draw_bar_chart(id) {
        chart = new Highcharts.Chart({
            chart: {
                renderTo: id,
                zoomType: 'xy',
                type: 'column',
                /*
                 backgroundColor: {
                 linearGradient: [0, 0, 500, 500],
                 stops: [
                 [0, 'rgb(255, 255, 255)'],
                 [1, 'rgb(240, 255, 240)']
                 ]
                 },
                 */
                //backgroundColor: '#FCFCFC',
                borderWidth: 0,
                //plotBackgroundColor: 'rgba(255, 255, 255, .9)',
                //plotShadow: true,
                plotBorderWidth: 0

            },
            title: {
                text: '',
                x: -20 //center
            },
            xAxis: {
                categories: [ 'Aug', 'Sep', 'Oct', 'Nov', 'Dec', 'Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul'],
                title: {
                    text: ''
                },
                labels: {
                    align: 'center',
                    //rotation: -45,
                    step: 1,
                    y: 25
                },
            },
            yAxis: {
                title: {
                    text: 'Cost ($$)'
                },
                gridLineWidth: 0,
                plotLines: [{
                    value: 0,
                    width: 0.5,
                    color: '#808080'
                }]
            },
            tooltip: {
                formatter: function() {
                    return '<b>'+ this.x +'</b><br/>'+
                            this.series.name +': '+ this.y +' $$  <br/>'+
                            'Total Cost: '+ this.point.stackTotal + ' $$';
                }
            },
            legend: {
                enabled: true,
                verticalAlign: 'bottom',
                layout: 'horizontal',
                align: 'center',
                floating: false,
                padding: -5,
            },
            credits: {
                enabled: false
            },
            colors: [
                '#94cc45',
                '#4099d8',
                '#c5789a',
                '#f7d63b',
                '#f7983b',
                '#e02853',
                '#69c2c5',
                '#5e287a',
                '#000',
                '#ccc'

            ],
            exporting: {
                enabled: false
            },
            plotOptions: {
                column: {
                    animation: true,
                    stacking: 'normal',
                    borderWidth: '0',
                },
                series: {
                    groupPadding: 0.25,
                },
            },
            series: [
                {
                    name: 'Potential Savings',
                    pointWidth: 15,
                    //enableMouseTracking: false,
                    //showInLegend: false,
                    data:  <%= File.open("public/data/buildings/#{@building_name}/gas/cost_savings_3.json", "rb") {|io| io.read} %>,
                    stack: 'you',
                },
                {
                    name: '2013',
                    pointWidth: 15,
                    data:  <%= File.open("public/data/buildings/#{@building_name}/gas/annual_your_cost.json", "rb") {|io| io.read} %>,
                    stack: 'you',
                },
                {
                    name: '2012',
                    pointWidth: 10,
                    color: '#aaa',
                    data:  <%= File.open("public/data/buildings/#{@building_name}/gas/lastyear_your_cost.json", "rb") {|io| io.read} %>,
                    stack: 'peers',
                },
            ]
        },
        function(chart){
            // Last point in graph...

            showLastPointTooltip(chart);



        }
        );
    };

    function showLastPointTooltip(objHighStockchart){
        // show tooltip for last point
        var points=[];
        if(objHighStockchart)
        {
            for(var i=0;i<objHighStockchart.series.length;i++)

                points.push(objHighStockchart.series[i].points[objHighStockchart.series[i].points.length-1]);


            objHighStockchart.tooltip.refresh(points);


        }
    };

    function draw_line_chart(id) {
        chart = new Highcharts.Chart({
            chart: {
                renderTo: id,
                zoomType: 'xy',
                /*
                 backgroundColor: {
                 linearGradient: [0, 0, 500, 500],
                 stops: [
                 [0, 'rgb(255, 255, 255)'],
                 [1, 'rgb(240, 255, 240)']
                 ]
                 },
                 */
                backgroundColor: 'transparent',
                borderWidth: 0,
                //plotBackgroundColor: 'rgba(255, 255, 255, .9)',
                //plotShadow: true,
                plotBorderWidth: 0

            },
            title: {
                text: '',
                x: -20 //center
            },
            xAxis: {
                categories: ['Aug', 'Sep', 'Oct', 'Nov', 'Dec', 'Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul'],
                title: {
                    text: ''
                },
                labels: {
                    align: 'center',
                    //rotation: -45,
                    step: 1,
                    y: 25
                },
            },
            yAxis: {
                title: {
                    text: 'Cost ($)'
                },
                gridLineWidth: 0,
                plotLines: [{
                    value: 0,
                    width: 0.5,
                    color: '#808080'
                }]
            },

            tooltip: {
                shared: true,
                useHTML: true,
                backgroundColor: 'rgba(51, 51, 51, 0.8)',
                headerFormat: '<span style="color:#fff;font-size:18px;">{point.key} Gas Cost</span><table>',
                pointFormat: '<tr><td style="color: {series.color};font-size:14px;">{series.name}: </td>' +
                        '<td style="text-align: right;font-size:14px;color:#fff;"><b>${point.y}</b></td></tr>',
                footerFormat: '</table>',
                valueDecimals: 0
                //valuePrefix: '$ ',
                //crosshairs: [true,true],
            },
            legend: {
                enabled: true,
                verticalAlign: 'top',
                layout: 'horizontal',
                align: 'right',
                floating: true,
                padding: -5,
            },
            credits: {
                enabled: false
            },
            colors: [
                '#94cc45',
                '#4099d8',
                '#c5789a',
                '#f7d63b',
                '#f7983b',
                '#e02853',
                '#69c2c5',
                '#5e287a',
                '#000',
                '#ccc'

            ],
            exporting: {
                enabled: false
            },
            series: [{
                name: '2013',
                marker: {
                    radius: 4,
                    lineColor: '#54a0f5',
                    lineWidth: 2,
                    symbol: 'circle'
                },
                color: '#54a0f5',
                maxPointWidth: 20,
                pointPadding: 0,
                groupPadding: 0,
                data:  <%= File.open("public/data/buildings/#{@building_name}/gas/annual_your_cost.json", "rb") {|io| io.read} %>
            },
                {
                    name: '2012',
                    marker: {
                        radius: 4,
                        lineColor: '#cc9900',
                        lineWidth: 2,
                        symbol: 'circle'
                    },
                    maxPointWidth: 20,
                    color: '#cc9900',
                    pointPadding: 0,
                    groupPadding: 0,
                    //showInLegend: false,
                    data:  <%= File.open("public/data/buildings/#{@building_name}/gas/lastyear_your_cost.json", "rb") {|io| io.read} %>
                },
//            {
//                type: 'arearange',
//                name: 'Potenial Savings',
//                color:  '#70E270',
//                maxPointWidth: 10,
//                pointPadding: 0,
//                groupPadding: 0,
//                fillColor: '#70E270',
//                fillOpacity: 0.6,
//                connectNulls: true,
//                data:  < File.open("public/data/buildings/#{@building_name}/electric/6_months_savings.json", "rb") {|io| io.read} >
//            },
            ]
        });

    };

    draw_line_chart("cost_chart_container");
    //draw_bar_chart("cost_chart_container");

</script>

