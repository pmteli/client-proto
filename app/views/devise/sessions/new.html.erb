<div class="wrapper">
  <!-- Box -->
  <div class="widget widget-heading-simple widget-body-gray">

    <div class="widget-body">

      <!-- Form -->
      <%= form_for(resource, :as => resource_name, :class => "row", :url => session_path(resource_name)) do |f| %>
          <label>User Name:</label>
          <%= f.text_field :username, :class => "input-block-level form-control", :placeholder => "Enter username", :autofocus => true %>
          <label >Password</label>
          <%= f.password_field :password, :class => "input-block-level form-control margin-none" %>
          <div class="separator bottom"></div>
            <br/><br/>
          <div class="col-md-4 padding-none">
          </div>
          <div class="col-md-4"></div>
          <div class="col-md-4 pull-right padding-none">
            <div class="separator bottom"></div>
            <br/>
            <%= f.submit "Sign in", :class => "btn  btn-primary"  %>
          </div>
      <% end %>

      <!-- // Form END -->

    </div>

  </div>
  <!-- // Box END -->
</div>

