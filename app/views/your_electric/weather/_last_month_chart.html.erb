                x: -20 //center
            },
            xAxis: {
                categories: ['Aug', 'Sep', 'Oct', 'Nov', 'Dec', 'Jan'],
                title: {
                    text: ''
                },
                labels: {
                    align: 'center',
                    //rotation: -45,
                    step: 1,
                    y: 25
                },
            },
            yAxis: {
                title: {
                    text: 'Cost ($$)'
                },
                gridLineWidth: 0,
                plotLines: [{
                    value: 0,
                    width: 0.5,
                    color: '#808080'
                }]
            },
            tooltip: {
                shared: true,
                useHTML: true,
                backgroundColor: 'rgba(51, 51, 51, 0.8)',
                headerFormat: '<span style="color:#fff;font-size:18px;">{point.key} Electricity Cost</span><table>',
                pointFormat: '<tr><td style="color: {series.color};font-size:14px;">{series.name}: </td>' +
                        '<td style="text-align: right;font-size:14px;color:#fff;"><b>$ {point.y}</b></td></tr>',
                footerFormat: '</table>',
                valueDecimals: 2
                //valuePrefix: '$$ ',
                //crosshairs: [true,true],
            },
            legend: {
                enabled: true,
                verticalAlign: 'top',
                layout: 'horizontal',
                align: 'right',
                floating: true,
                padding: -5,
            },
            credits: {
                enabled: false
            },
            colors: [
                '#94cc45',
                '#4099d8',
                '#c5789a',
                '#f7d63b',
                '#f7983b',
                '#e02853',
                '#69c2c5',
                '#5e287a',
                '#000',
                '#ccc'

            ],
            exporting: {
                enabled: false
            },
            series: [
                {
                    name: '2012',
                    marker: {
                        radius: 4,
                        lineColor: '#cc9900',
                        lineWidth: 2,
                        symbol: 'circle'
                    },
                    maxPointWidth: 20,
                    color: '#cc9900',
                    pointPadding: 0,
                    groupPadding: 0,
                    //showInLegend: false,
                    data:  <%= File.open("public/data/buildings/#{@building_name}/electric/6_months_lastyear_usage.json", "rb") {|io| io.read} %>
                },
                {
                name: '2013',
                marker: {
                    radius: 4,
                    lineColor: '#54a0f5',
                    lineWidth: 2,
                    symbol: 'circle'
                },
                color: '#54a0f5',
                maxPointWidth: 20,
                pointPadding: 0,
                groupPadding: 0,
                data:  <%= File.open("public/data/buildings/#{@building_name}/electric/6_months_your_usage.json", "rb") {|io| io.read} %>
            },
//            {
//                type: 'arearange',
//                name: 'Potenial Savings',
//                color:  '#70E270',
//                maxPointWidth: 10,
//                pointPadding: 0,
//                groupPadding: 0,
//                fillColor: '#70E270',
//                fillOpacity: 0.6,
//                connectNulls: true,
//                data:  < File.open("public/data/buildings/#{@building_name}/electric/6_months_savings.json", "rb") {|io| io.read} >
//            },
            ]
        });

    };

   //draw_line_chart("cost_chart_container");
   draw_bar_chart("weather_chart_container");

</script>

