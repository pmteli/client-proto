<div id="weather_chart_container" style="min-width:400px;height:240px;margin-top:20px;padding-top:20px;"></div>

<script type="text/javascript">

    var chart;

    function draw_bar_chart(id) {
        chart = new Highcharts.Chart({
            chart: {
                renderTo: id,
                zoomType: 'xy',
                type: 'column',
                /*
                 backgroundColor: {
                 linearGradient: [0, 0, 500, 500],
                 stops: [
                 [0, 'rgb(255, 255, 255)'],
                 [1, 'rgb(240, 255, 240)']
                 ]
                 },
                 */
                backgroundColor: 'transparent',
                borderWidth: 0,
                //plotBackgroundColor: 'rgba(255, 255, 255, .9)',
                //plotShadow: true,
                plotBorderWidth: 0

            },
            title: {
                text: '',
                x: -20 //center
            },
            xAxis: {
                categories: ['September'],
                title: {
                    text: ''
                },
                labels: {
                    align: 'center',
                    //rotation: -45,
                    step: 1,
                    y: 25
                },
            },
            yAxis: {
                title: {
                    text: 'Cost ($$)'
                },
                gridLineWidth: 0,
                plotLines: [{
                    value: 0,
                    width: 0,
                    color: '#808080'
                }]
            },
            tooltip: {
                shared: true,
                useHTML: true,
                backgroundColor: 'rgba(51, 51, 51, 0.8)',
                headerFormat: '<span style="color:#fff;font-size:18px;">{point.key} Electricity Cost</span><table>',
                pointFormat: '<tr><td style="color: {series.color};font-size:14px;">{series.name}: </td>' +
                        '<td style="text-align: right;font-size:14px;color:#fff;"><b>${point.y}</b></td></tr>',
                footerFormat: '</table>',
                valueDecimals: 0,
                shadow: false,
                //valuePrefix: '$$ ',
                //crosshairs: [true,true],
            },
            legend: {
                enabled: true,
                verticalAlign: 'bottom',
                layout: 'horizontal',
                align: 'center',
                floating: false,
                padding: -5,
            },
            credits: {
                enabled: false
            },
            colors: [
                '#94cc45',
                '#4099d8',
                '#c5789a',
                '#f7d63b',
                '#f7983b',
                '#e02853',
                '#69c2c5',
                '#5e287a',
                '#000',
                '#ccc'

            ],
            exporting: {
                enabled: false
            },
            plotOptions: {
                column: {
                    animation: true,
                    stacking: 'normal',
                    borderWidth: '0',
                    pointPadding: 0.2,
                    dataLabels: {
                        enabled: true,
                        color: 'white',
                        formatter: function() {

                            if (this.percentage < 15)
                            {
                                return ""
                            }
                            else
                            {
                                //return Math.round(this.percentage,1) + "%";
                                return '$' + this.y;
                            }
                        },
                        style: {
                            fontSize: '14px'
                        }
                    }
                },
                series: {
                    //grouping:true,
                    //groupPadding:0.25,
                    pointPadding: 0,
                    borderWidth: 0,
                    events: {
                        legendItemClick: function () {
                            return false;
                        }
                    }
                }
            },
            series: [
                {
                    name: 'Weather Related',
                    //enableMouseTracking: false,
                    //showInLegend: false,
                    color: '#cc9900',
                    //color: '#94cc45',
                    data:  [2376],
                    pointWidth: 95,
                    stack: 'you',
                },
                {
                    name: '2013',
                    color: '#4099d8',
                    pointWidth: 95,
                    data: [7024],
                    stack: 'you',
                },
                {
                    name: 'Weather Related',
                    //enableMouseTracking: false,
                    showInLegend: false,
                    color: '#cc9900',
                    //color: '#94cc45',
                    data:  [2000],
                    pointWidth: 95,
                    stack: 'peers',
                },
                {
                    name: '2012',
                    pointWidth: 95,
                    color:'#CCC',
                    data: [8000],
                    stack: 'peers',
                },
            ]
        },
        function(chart){
            // Last point in graph...

            showLastPointTooltip(chart);



        }
        );
    };

    function showLastPointTooltip(objHighStockchart){
        // show tooltip for last point
        var points=[];
        if(objHighStockchart)
        {
            for(var i=0;i<objHighStockchart.series.length;i++)

                points.push(objHighStockchart.series[i].points[objHighStockchart.series[i].points.length-1]);


            objHighStockchart.tooltip.refresh(points);


        }
    };

    function draw_line_chart(id) {
        chart = new Highcharts.Chart({
            chart: {
                renderTo: id,
                zoomType: 'xy',
                /*
                 backgroundColor: {
